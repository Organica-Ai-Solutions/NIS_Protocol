# NIS Protocol AWS Deployment Configuration
# Copy this to /opt/nis-protocol/.env on AWS EC2/ECS/Lambda

# ============================================================================
# PROJECT PATHS (AWS Standard)
# ============================================================================
NIS_PROJECT_ROOT=/opt/nis-protocol
PYTHONPATH=/opt/nis-protocol

# ============================================================================
# BACKEND CONFIGURATION
# ============================================================================
# Local Docker: http://localhost
# AWS ALB: https://api.nis-protocol.yourcompany.com
# AWS API Gateway: https://your-api-id.execute-api.us-east-1.amazonaws.com
NIS_BACKEND_URL=http://localhost

# ============================================================================
# MCP SERVER CONFIGURATION
# ============================================================================
NIS_MCP_MODE=production
NIS_MCP_API_KEY=your-production-api-key-here

# ============================================================================
# LLM PROVIDERS (Required for full functionality)
# ============================================================================
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
GOOGLE_API_KEY=your-google-api-key
DEEPSEEK_API_KEY=your-deepseek-key

# ============================================================================
# AWS SERVICES
# ============================================================================
# S3 for artifacts
AWS_S3_BUCKET=nis-protocol-artifacts
AWS_REGION=us-east-1

# DynamoDB for job tracking
AWS_DYNAMODB_TABLE=nis-jobs

# CloudWatch for logs
AWS_CLOUDWATCH_LOG_GROUP=/aws/nis-protocol

# ============================================================================
# REDIS (AWS ElastiCache)
# ============================================================================
REDIS_HOST=your-elasticache-endpoint.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_SSL=true

# ============================================================================
# DATABASE (AWS RDS if using)
# ============================================================================
# DB_HOST=your-rds-endpoint.rds.amazonaws.com
# DB_PORT=5432
# DB_NAME=nis_protocol
# DB_USER=nis_admin
# DB_PASSWORD=your-db-password

# ============================================================================
# SECURITY & MONITORING
# ============================================================================
# Enable audit logging
NIS_AUDIT_ENABLED=true
NIS_AUDIT_LOG_PATH=/var/log/nis-protocol/audit.log

# Rate limiting
NIS_RATE_LIMIT_RPM=60
NIS_MAX_CONCURRENT_JOBS=5

# Budget controls
NIS_MAX_BUDGET_PER_JOB=100.0
NIS_MAX_JOB_DURATION=3600

# ============================================================================
# PERFORMANCE
# ============================================================================
# Worker processes (set based on EC2 instance size)
NIS_WORKERS=4

# Timeouts (seconds)
NIS_REQUEST_TIMEOUT=300
NIS_JOB_TIMEOUT=3600

# ============================================================================
# FEATURE FLAGS
# ============================================================================
NIS_ENABLE_ROBOTICS=true
NIS_ENABLE_PHYSICS=true
NIS_ENABLE_RESEARCH=true
NIS_ENABLE_MCP=true

# ============================================================================
# DEPLOYMENT INFO
# ============================================================================
NIS_ENVIRONMENT=production
NIS_VERSION=3.2.5
NIS_DEPLOYMENT_DATE=2025-01-19

