# ----------------------------------------------------------------------------
# üîë API KEYS (Loaded from AWS Secrets Manager)
# ----------------------------------------------------------------------------
# These are loaded automatically from AWS Secrets Manager when AWS_SECRETS_ENABLED=true
# Secret ARNs:
# - OpenAI: arn:aws:secretsmanager:us-east-2:774518279463:secret:nis/openai-api-key-x0UEEi
# - DeepSeek: arn:aws:secretsmanager:us-east-2:774518279463:secret:nis/openai-api-key-x0UEEi
# - Google: arn:aws:secretsmanager:us-east-2:774518279463:secret:nis/google-api-key-UpwtiO
# - Anthropic: arn:aws:secretsmanager:us-east-2:774518279463:secret:nis/anthropic-api-key-00TnSn

# Fallback: Set these only if AWS Secrets Manager is unavailable
# OPENAI_API_KEY=your-key-here
# ANTHROPIC_API_KEY=your-key-here
# GOOGLE_API_KEY=your-key-here
# DEEPSEEK_API_KEY=your-key-here

# ----------------------------------------------------------------------------
# üéØ APPLICATION CONFIGURATION
# ----------------------------------------------------------------------------
NIS_ENV=production
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# Application Behavior
ENABLE_VOICE=true
ENABLE_ANALYTICS=true
ENABLE_CACHING=true

# ----------------------------------------------------------------------------
# üöÄ GPU & NVIDIA CONFIGURATION
# ----------------------------------------------------------------------------
# GPU Configuration for g4dn.xlarge (NVIDIA T4)
NVIDIA_NIM_ENABLED=true
CUDA_VISIBLE_DEVICES=0
NVIDIA_DRIVER_CAPABILITIES=compute,utility

# NVIDIA API Key (optional - for NVIDIA NIM)
NVIDIA_API_KEY=your-nvidia-api-key-here

# BitNet Training (disabled in production)
BITNET_TRAINING_ENABLED=false

# ----------------------------------------------------------------------------
# üåç GOOGLE CLOUD CONFIGURATION
# ----------------------------------------------------------------------------
GCP_PROJECT_ID=organicaaisolutions
GOOGLE_SERVICE_ACCOUNT_KEY=/app/service-account-key.json

# ----------------------------------------------------------------------------
# üî¨ AGENT CONFIGURATION
# ----------------------------------------------------------------------------
# Agent Orchestrator Settings
AGENT_MAX_CONCURRENT=10
AGENT_TIMEOUT=120

# Physics Validation
ENABLE_PHYSICS_VALIDATION=true
PHYSICS_AUTO_CORRECTION=true

# Research Agent
ENABLE_WEB_SEARCH=true
MAX_SEARCH_RESULTS=10

# ----------------------------------------------------------------------------
# üíæ MEMORY & CACHING
# ----------------------------------------------------------------------------
# Memory Configuration
MEMORY_MAX_CONTEXT_LENGTH=4096
MEMORY_EMBEDDING_DIM=768
ENABLE_CONVERSATION_MEMORY=true

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ----------------------------------------------------------------------------
# üîê SECURITY
# ----------------------------------------------------------------------------
# CORS Settings
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# JWT Configuration (Optional)
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400

# ----------------------------------------------------------------------------
# üöÄ PERFORMANCE TUNING
# ----------------------------------------------------------------------------
# Worker Configuration
WORKERS=1
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# Request Limits
MAX_REQUEST_SIZE=10485760
REQUEST_TIMEOUT=300

# ----------------------------------------------------------------------------
# üìä MONITORING & OBSERVABILITY
# ----------------------------------------------------------------------------
# CloudWatch Logs
LOG_GROUP=/ecs/backend
LOG_STREAM_PREFIX=nis-backend

# Health Check
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=10

# ============================================================================
# END OF AWS CONFIGURATION
# ============================================================================
